{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "target": "es2017",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2017",
    ],
    "strict": true,
    "jsx": "react",
    "types": [ "@types/three", "jest", "puppeteer", "ts-jest", "jest-environment-puppeteer"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
